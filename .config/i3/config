#Gestor de archivos
bindsym $mod+e exec thunar

# Controles de sesión y apagado
mode  "  [s]alir, s[u]spender, [r]einiciar, [a]pagar  "  {
     
    bindsym s exec --no-startup-id i3-msg exit, mode "default"
    bindsym u exec --no-startup-id $i3lockwall && systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym a exec --no-startup-id systemctl poweroff -i, mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+x mode "  [s]alir, s[u]spender, [r]einiciar, [a]pagar  "


#Mostrar historial de portapapeles
bindsym $mod+i exec "rofi -modi \\"clipboard:greenclip print\\" -show clipboard -run-command '{cmd}' -theme ~/.config/polybar/forest/scripts/rofi/launcher.rasi"

